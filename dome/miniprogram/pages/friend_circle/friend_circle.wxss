/* pages/friend_circle/friend_circle.wxss */
.friend_circle {
  margin-bottom: 80rpx;
}

.img_back {
  height: 480rpx;
  position: relative;
}

.box {
  overflow: scroll;
  /* height: calc(100vh - 480rpx); */
}

.img_back image {
  width: 100%;
  position: absolute;
  height: 100%;
  z-index: 1;
  top: 0;
  left: 0;
}

.back {
  position: absolute;
  z-index: 2;
  top: 73rpx;
  left: 18rpx;
  color: #ffffff;
  font-size: 50rpx;
}

.img_back .title {
  position: absolute;
  z-index: 2;
  top: 130rpx;
  left: 99rpx;
  color: #ffffff;
  font-size: 40rpx;
}

.heard_img {
  position: absolute;
  z-index: 2;
  bottom: 60rpx;
  right: 150rpx;
  width: 150rpx;
  height: 150rpx;
