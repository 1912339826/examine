<!--pages/order_list/order_list.wxml-->
<!-- 我的购物车 -->
<view class="order_list">
	<view class="lists">
		<view class="list" wx:for="{{lists}}">
			<view class="nav">
				<view class="day">{{item.createTime}}</view>
				<view class="orderNo">订单号：{{item.orderNo}}</view>
			</view>
			<view class="box">
				<image mode="cover" src="{{item.cover}}"></image>
				<view class="title">{{item.title}}</view>
				<view class="price">￥{{item.price}}</view>
			</view>
			<view class="handle">
				<view>查看视频</view>
			</view>
		</view>
	</view>
</view>
<tab active_index="1" />