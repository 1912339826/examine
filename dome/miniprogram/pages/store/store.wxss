/* pages/store/store.wxss */
.store {
  padding-bottom: 120rpx;
  padding-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list .img .play_img {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  z-index: 2;
  top: 50%;
  left: 50%;
}

.recommend_sort {
  width: 100%;
  position: fixed;
  top: 0;
  height: 80rpx;
  font-size: 25rpx;
  z-index: 999;
  color: #ffffff;
  display: flex;
  align-items: center;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  justify-content: space-between;
  background-color: #395996;
  box-shadow: 0px 5px 5px #0000002c;
}

.recommend_sort>.recommend {
  margin-left: 60rpx;
}

.recommend_sort>.sort {
  margin-right: 60rpx;
}

.big_img {
  margin-top: 20rpx;
  text-align: center;
  
}

.big_img swiper {
  width: 720rpx;
  height: calc(37rpx * 8);
  text-align: center;
}

.big_img swiper image {
  border-radius: 40rpx;
  width: 100%;
  height: 100%;
}

.lists {
  margin-top: 20rpx;
  width: 720rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.list {
  width: 336rpx;
  margin-bottom: 40rpx;
}

.box {
  border-radius: 40rpx;
  box-shadow: 2px 2px 3px #0000002c;
  overflow: hidden;
}

.list .img {
  position: relative;
  height: 336rpx;
  width: 100%;
}

.list .img .show {
  position: absolute;
  z-index: 1;
  width: 100%;
  border-top-right-radius: 40rpx;
  border-top-left-radius: 40rpx;
  height: 336rpx;
  background-color: darkblue;
}

.praise {
  z-index: 2;
  background-color: #ffffff;
  position: absolute;
  right: 0;
  bottom: 0;
  width: 60rpx;
  height: 30rpx;
  border-top-left-radius: 15rpx;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.praise image {
  margin-left: 5rpx;
  width: 20rpx;
  height: 20rpx;
}

.content {
  height: 99rpx;
  background-color: #ffffff;
  padding: 10rpx 10rpx 10rpx 20rpx;
}

.content .price_button {
  color: #333333;
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
}

.content .button {
  height: 45rpx;
  width: 50rpx;
}

.content .introductory {
  font-size: 20rpx;
  width: 250rpx;
  height: 50rpx;
  /* margin-top: 5rpx; */
  white-space: pre-wrap
}

.button_buy {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.button_buy .button_ {
  background-color: #395996;
  color: #ffffff;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 15rpx;
  width: 50%;
  font-size: 25rpx;
}