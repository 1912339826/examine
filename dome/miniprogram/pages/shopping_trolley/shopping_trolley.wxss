/* pages/shopping_trolley/shopping_trolley.wxss */
.shopping_trolley{
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.big_img {
  margin-top: 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.big_img image{
  border-radius: 40rpx;
  width: 720rpx;
  height: calc(37rpx * 8);
}

.lists{
  width: 720rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.list {
  width: 336rpx;
  margin-bottom: 40rpx;
}

.box{
  border-radius: 40rpx;
  box-shadow:2px 2px 3px #0000002c;
  overflow: hidden;
}

.list .img{
  position: relative;
  height: 336rpx;
  width: 100%;
}
.list .img .show{
  position: absolute;
  z-index: 1;
  width: 100%;
  border-top-right-radius: 40rpx;
  border-top-left-radius: 40rpx;
  height: 336rpx;
  background-color: darkblue;
}

.praise{
  z-index: 2;
  background-color: #ffffff;
  position: absolute;
  right: 0;
  bottom: 0;
  width: 60rpx;
  height: 30rpx;
  border-top-left-radius: 15rpx;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.praise image{
  margin-left: 5rpx;
  width: 20rpx;
  height: 20rpx;
}

.content{
  height: 99rpx;
  background-color: #ffffff;
  padding: 10rpx 10rpx 10rpx 20rpx;
}

.content .price_button{
  color: #333333;
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
}

.content .button{
  height: 45rpx;
  width: 50rpx;
}

.content .introductory{
  font-size: 20rpx;
  width: 250rpx;
  height: 50rpx;
  margin-top: 5rpx;
  white-space:pre-wrap
}

.button_buy{
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.button_buy .button_{
  background-color: #395996;
  color: #ffffff;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 15rpx;
  width: 50%;
  font-size: 25rpx;
}