/* components/tab/tab.wxss */
.tab{
  height: 120rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  display: flex;
  z-index: 9999;
  align-items: center;
  justify-content: space-around;
}

.tab image{
  width: 50rpx;
  height: 50rpx;
}

.tab .son:nth-child(1) image{
  width: 47rpx;
}
.tab .son:nth-child(2) image{
  width: 60rpx;
}
.tab .son:nth-child(3) image{
  width: 48rpx;
}

.tab .son:nth-child(4) image{
  width: 50rpx;
}

.son{
  color: "#4d4d4d";
  text-align: center;
}